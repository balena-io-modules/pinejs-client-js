{
	"compilerOptions": {
		"module": "Node16",
		"strict": true,
		"strictFunctionTypes": false,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"target": "es2018",
		"declaration": true,
		"skipLibCheck": true,
		"rootDir": "src",
		"outDir": "dist"
	},
	"include": [
		"src/*"
	],
	"exclude": [
		"node_modules"
	]
}
