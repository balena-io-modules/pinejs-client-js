{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"target": "es2015",
		"declaration": true,
		"skipLibCheck": true,
		"rootDir": "src"
	},
	"include": [
		"src/*"
	],
	"exclude": [
		"node_modules"
	]
}
